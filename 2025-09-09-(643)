class Solution {
    public double findMaxAverage(int[] nums, int k) {
    int n=nums.length;
    int left=0;
    int right=k-1;
    int sum=0;
    for(int i=left;i<=right;i++){
        sum+=nums[i];
    }
    int orginal=sum;
    double maxavg=(double)sum/k;
    while(right<n-1){
        orginal=orginal-nums[left];
        left++;
        right++;
        orginal=orginal+nums[right];
        double avg=(double)orginal/k;
        maxavg=Math.max(maxavg,avg); 
    }
    return maxavg;
    }
}
