class doubly{
    class Node{
        int value;
        Node next,prev;
        Node(int val){
          this.value=val;
          this.next=null;
          this.prev=null;
        }
    }
    Node head,tail,temp;
    int size=0;
    void insertFirst(int val){
        Node newnode=new Node(val);
        if(head==null){
            head=newnode;
            tail=newnode;
        }else{
            newnode.next=head;
            head.prev=newnode;
            head=newnode;
            // head.prev=null;
        }
        size++;
    }
    void insertLast(int val){
        Node newnode=new Node(val);
        if(head==null){
            head=newnode;
            tail=newnode;
        }else{
            tail.next=newnode;
            newnode.prev=tail;
            tail=newnode;
        }
        size++;
    }
    void insertatanypos(int pos,int val){
        Node newnode=new Node(val);
        if(pos<0 ||pos>size){
            System.out.println("Invalid position");
            return;
        }
        else if(pos==0){
             insertFirst(val);
            return;
        }else if(pos==size){
             insertLast(val);
             return;
        }else{
            temp=head;
            for(int i=1;i<pos;i++){
                temp=temp.next;
            }
            Node nextnode=temp.next;
            temp.next=newnode;
            newnode.prev=temp;
            newnode.next=nextnode;
            nextnode.prev=newnode;
            size++;
        }
       
    }
    void insertafternode(int ele,int val){
        temp=head;
        Node newnode=new Node(val);
        while(temp!=null){
        if(temp.value==ele){
            Node nextnode=temp.next;
            temp.next=newnode;
            newnode.prev=temp;
            newnode.next=nextnode;
            if(nextnode!=null){
            nextnode.prev=newnode;
            }else{
                tail=newnode;
            }
            size++;
            return;
        }else{
            temp=temp.next;
        }
    }
    System.out.println("Invalid eleement");
    }
    void deleteatFront(){
        if(size==0){
            System.out.println("List is Empty");
            return;
        }else if(size==1){
            head=null;
            tail=null;
        }else{
            head=head.next;
            head.prev=null;
        }
        size--;
    }
    void deleteatLast(){
         if(size==0){
            System.out.println("List is Empty");
            return;
        }else if(size==1){
            head=null;
            tail=null;
        }else{
            temp=head;
            for(int i=1;i<size-1;i++){
                temp=temp.next;
            }
            temp.next=null;
        }
        size--;
    }
    void deletionatanypos(int pos){
        if(pos<0 || pos>=size){
            System.out.println("Invalid postion");
        }else if(pos==0){
            deleteatFront();
            return;
        }else if(pos==size-1){
            deleteatLast();
            return;
        }else{
            temp=head;
            for(int i=1;i<pos;i++){
                temp=temp.next;
            }
            Node dele=temp.next;
            temp.next.next.prev=dele.prev;
            temp.next=dele.next;
            size--;
        }
    }
    void display(){
        temp=head;
        while(temp!=null){
            System.out.print(temp.value+" -> ");
            temp=temp.next;
        }
    }
    void displayRev(){
         temp=tail;
        while(temp!=null){
            System.out.print(temp.value+" -> ");
            temp=temp.prev;
        }
    }
}
public class doublyll {
    public static void main(String[] args) {
        doubly ll=new doubly();
        ll.insertLast(1);
        ll.insertLast(2);
        ll.insertLast(4);
        ll.insertLast(5);
        ll.display();
        System.out.println();
        ll.deletionatanypos(2);
        ll.display();
    //     ll.insertafternode(2,3);
    //     ll.display();
    //     ll.deleteatFront();
    //     System.out.println();
    //     ll.display();
    //     ll.deleteatLast();
    //     System.out.println();
    //     ll.display();
    }
}
